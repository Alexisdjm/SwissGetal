  display: flex;
  gap: 7%;
  color: white;
  margin: 0 0 0 6%;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.each-link {
  min-width: fit-content;
}

.logo-header-container {
  position: absolute;
  left: 45%;
}

.items-container {
  display: flex;
  gap: 20px;
  color: white;
  font-size: 18px;
  margin-right: 2%;
}

#heart-link.heart-icon-centered {
  display: flex;
  align-items: center;
  font-size: 20px;
}

.center-icons {
  position: relative;
  top: 9%;
}

/* ----------------------------------------------media queries ------------------------------------------- */

@media only screen and (max-width: 1200px) {
  .text-container {
    width: 60%;
    margin: 100px 0;
    left: 10%;
  }
}

@media only screen and (max-width: 1100px) {
  .navbar-links {
    display: none;
  }
}

@media screen and (min-width:768px) and (max-width: 1000px) {
  #account-link, #heart-link.heart-icon-centered {
    display: none;
  }
  .items-container {
    gap: 0;
  }

  .text-container {
    width: 60%;
    margin: auto 0;
    text-align: center;
    position: static;
  }

  .align-1, .align-3 {
    justify-content: center;
  }
}

@media only screen and (max-width: 767px) {
  .text-container {
    width: 80%;
  }
}