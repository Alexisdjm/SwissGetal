.flex-center {
  justify-content: center;
}
/* ---------------------------------------- first text with image background ------------------------------- */

.section-container {
  margin: 60px 0;
  width: 100%;
}

#first-section.section-container {
  margin: 0 0 60px;
  width: 100%;
}

.img-bg-container {
  width: 100%;
  min-height: 600px;
  display: flex;
  position: relative;
}
.align-1 {
  justify-content: start;
}
.align-2 {
  justify-content: center;
}
.align-3 {
  justify-content: end;
}

.v-align-1 {
  top: calc(600px/2);
}
.v-align-2 {
  top: calc(600px/3);
}
.v-align-3 {
  top: calc(600px/4);
}
.v-align-4 {
  top: calc(600px/5);
}
.v-align-5 {
  top: calc(600px/6);
}
.v-align-6 {
  top: calc(600px/7);
}
.v-align-7 {
  top: calc(600px/8);
}
.v-align-8 {
  top: calc(600px/9);
}

.text-container {
  width: 33%;
  max-width: 600px;
  height: fit-content;
  padding: 15px;
  z-index: 9;
  margin: 100px;
  position: relative;
  left: calc((100% - 1360px)/2 + 50px);
}

.text-header {
  color: white;
  font-size: 40px;
  margin: 0 0 0.5em;
}

.main-text {
  color: white;
  font-size: 18px;
  margin: 0 0 1.5em;
}

.img {
  position: absolute;
  width: 100%;
  height: 600px;
  object-fit: cover;
}

.the-link {
  color: white;
  font-weight: 500;
  font-size: 16px;
}

/* ---------------------------------------- featured collection ------------------------------------------ */

.flex-header-section {
  display: flex;
}

.flex-sb {
  justify-content: space-between;
}

.flex-start {
  justify-content: start;
}

.flex-end {
  justify-content: end;
}

.link-products {
  background-color: transparent;
  color: black;
  border: none;
  text-decoration: revert;
  font-size: 12px
}

.link-products:hover {
  font-weight: 400;
}

.sale-tag {
  font-size: 0.6875em;
  font-weight: 500;
  letter-spacing: 0.1em;
  line-height: 1.4;
  position: absolute;
  text-transform: uppercase;
}

.sale-tag.tl {
  top: 10px;
}

.sale-tag.sale {
  background: white;
  color: gray;
}

/* ------------------------------------- side image huge title ------------------------------------------- */

.big-title, .collection-link {
  margin: 80px 0 120px;
}

.flex-big-container {
  display: flex;
  margin: 0 auto;
  max-width: 1100px;
  justify-content: center;
}

.main-text-ht {
  width: 680px;
  position: relative;
  display: flex;
  align-items: center;
}

.content-text-container {
  position: absolute; 
  height: fit-content;
  min-width: 680px;
}

.huge-title {
  width: fit-content;
  margin: 0 0 25px;
  color: black;
  font-family: 'Playfair Display', serif;
  font-style: italic;
}

.side-image,
.side-image-dimensions {
  width: 780px;
  height: 500px;
}

.text-promotion {
  color: black;
  margin: 0 0 25px;
}

.img-align {
  width: 780px;
  height: 471px;
}

