/* --------------------------------------- collection link -------------------------------------------- */

.container-flex {
  width: 100%;
  display: flex;
  justify-content: center;
}

.centered-collection {
  height: fit-content;
  width: 100%;
  max-width: 1200px;
}

.inner-relative {
  height: fit-content;
  position: relative;
}

.collection-name {
  font-size: 36px;
  margin: 0 0 15px;
}

.collection-link-button {
  text-decoration: none;
  padding: 10px 20px;
  border: 2px solid white;
}

