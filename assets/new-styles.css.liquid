/* ---------------------------------------- instagram posts ----------------------------------------- */

.arrows-container {
  position: absolute;
  z-index: 999;
  width: 100%;
  display: none;
}

.arrow-btn {
  width: 40px;
  height: 239px;
  background-color: white;
  opacity: 0.5;
}

.post-ig {
  height: 100% !important;
  width: 100%;
}

.instagram-post-align {
  height: fit-content;
  width: fit-content;
}

.ig-square-logo {
  width: 17%;
  max-width: 229px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 999;
  top: 0;
  display: none;
}

.ig-square-logo:hover {
  background-color: #242424;
  opacity: 0.4;
}

.post {
  min-width: 17%;
  max-height: 17vw;
}

section {
  width: 100%;
  display: flex;
  justify-content: center;
  overflow-x: hidden;
  overflow-y: hidden;
  position: relative;
}

/* ------------------------------------------ logo-container ------------------------------------------- */

.logo-container {
  min-height: 16%;
  display: flex;
  align-items: center;
  width: fit-content;
  gap: 2%;
}

.logo-src {
  max-width: 60px;
  max-height: 60px;
}

.logo-text {
  min-width: fit-content;
  margin: 0;
}

.new-button, .another-button {
  display: inline-block;
  min-height: 40px;
  transition: 0.2s ease;
  transition-property: opacity, border-color, background-color, color;
  font-weight: 500;
  line-height: 1.5rem;
  text-transform: uppercase;
  vertical-align: top;
  -webkit-appearance: none;
  font-size: 0.875em;
  letter-spacing: 0.08em;
}

.new-button {
  padding: 12px 24px;
}

.another-button {
  padding: 7px 24px;
}

.new-secondary-button {
  border: 2px solid white;
  color: white;
}

.another-secondary-button {
  border: 1px solid black;
  color: black;
}

.hide {
  display: none;
}

.align-vertical-center {
  display: flex;
  position: relative;
}

.tight-optional-background {
  width: 100%;
  position: absolute;
  z-index: -1;
}

.tight-1 {
  min-height: 200px;
}

.tight-2 {
  min-height: 250px;
}

.tight-3 {
  min-height: 300px;
}

.tight-4 {
  min-height: 350px;
}

.new-secondary-button:hover {
  border: 2px solid #242424;
  background-color: #242424;
}

.another-secondary-button:hover {
  border: 1px solid #242424;
  background-color: #242424;
  color: white;
}

.collection-link-text {
  color: white;
}

@media only screen and (max-width: 1200px) {
  .text-container {
    width: 60%;
    margin: 100px 0;
    left: 10%;
  }
}