/* --------------------------------------- collection link -------------------------------------------- */

.container-flex {
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 2%;
}

.centered-collection {
  position: relative;
  height: fit-content;
  width: fit-content;
}

.inner-relative {
  height: fit-content;
  position: relative;
}

.collection-name {
  font-size: 36px;
  margin: 0 0 15px;
}

