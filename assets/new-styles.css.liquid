.text-container {
  width: 33%;
  max-width: 600px;
  height: fit-content;
  padding: 15px;
  z-index: 9;
  margin: 100px;
  position: relative;
  left: calc((100% - 1360px) / 2 + 50px);
}

.text-header {
  color: white;
  font-size: 40px;
  margin: 0 0 0.5em;
}

.main-text {
  color: white;
  font-size: 18px;
  margin: 0 0 1.5em;
}

.img {
  position: absolute;
  width: 100%;
  height: 600px;
  object-fit: cover;
}

.the-link {
  color: white;
  font-weight: 500;
  font-size: 16px;
}

