}

.ig-square-logo {
  background-color: #242424;
  opacity: 0;
  width: 16.8vw;
  display: flex;
  height: 17vw;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 9;
  top: 0;
}

.ig-square-logo:hover {
