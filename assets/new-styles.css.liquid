/* --------------------------------------- collection link -------------------------------------------- */

.container-flex {
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 2%;
}

.centered-collection {
  position: relative;
  height: fit-content;
  width: fit-content;
}

.inner-relative {
  height: fit-content;
  position: relative;
}

.collection-name {
  font-size: 36px;
  margin: 0 0 15px;
}

.collection-link-button {
  text-decoration: none;
  padding: 10px 20px;
  border: 2px solid white;
}

.link-n-text {
  position: absolute;
  max-width: 400px;
  margin: auto;
  left: 25%;
  top: 37.5%;
  text-align: center;
}

/* ---------------------------------------- instagram posts ----------------------------------------- */

.arrows-container {
  position: absolute; 
  z-index:999; 
  width: 100%;
  display: none;
}

.arrow-btn {
  width: 40px;
  height: 239px;
  background-color: white;
  opacity: 0.5;
}

.post-ig {
  height: 100% !important;
  width: 100%;
}

.instagram-post-align {
  height: fit-content;
  width: fit-content;
}

.ig-square-logo {
  width: 17%;
  max-width: 229px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 999;
  top: 0;
  display: none;
}

.ig-square-logo:hover {
  background-color: #242424;
  opacity: 0.4;
}

.post {
  min-width: 17%;
  max-height: 17vw;
}

section {
  width: 100%;
  display: flex;
  justify-content: center;
  overflow-x: hidden;
  overflow-y: hidden;
  position: relative;
}

/* ------------------------------------------ logo-container ------------------------------------------- */

.logo-container {
  min-height: 16%;
  display: flex;
  align-items: center;
  width: fit-content;
  gap: 2%;
}

.logo-src {
  max-width: 60px;
  max-height: 60px;
}

.logo-text {
  min-width: fit-content;
  margin: 0;
}

@media screen (min-width: 768px) and (max-width: 1200px) {
  .text-container {
    width: 60%;
    margin: 100px 0;
    left: 10%;
  }
}