  font-size: 85px;
}

.size-90 {
  font-size: 90px;
}

.size-95 {
  font-size: 95px;
}

.size-100 {
  font-size: 100px;
}

.content-10 {
  font-size: 10px;
}

.content-12 {
  font-size: 12px;
}

.content-14 {
  font-size: 14px;
}

.content-16 {
  font-size: 16px;
}

.content-18 {
  font-size: 18px;
}

.learn-more {
  color: black;
  text-decoration: revert;
  font-size: 12px;
}

.font-black {
