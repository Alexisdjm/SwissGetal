/* ------------------------------------------ logo-container ------------------------------------------- */

.logo-container {
  min-height: 16%;
  display: flex;
  align-items: center;
  width: fit-content;
  justify-content: space-between;
  gap: 2%;
}

.logo-src {
  max-width: 60px;
  max-height: 60px;
}

.logo-text {
  min-width: fit-content;
  margin: 0;
}

.new-button, .another-button {
  display: inline-block;
  min-height: 40px;
  transition: 0.2s ease;
  transition-property: opacity, border-color, background-color, color;
  font-weight: 500;
  line-height: 1.5rem;
  text-transform: uppercase;
  vertical-align: top;
  -webkit-appearance: none;
  font-size: 0.875em;
  letter-spacing: 0.08em;
}

.new-button {
  padding: 12px 24px;
}

.another-button {
  padding: 7px 24px;
}

.new-secondary-button {
  border: 2px solid white;
  color: white;
}

.another-secondary-button {
  border: 1px solid black;
  color: black;
}

.hide {
  display: none;
}

.align-vertical-center {
  display: flex;
  position: relative;
}

.tight-optional-background {
  width: 100%;
  position: absolute;
  z-index: -1;
}

.tight-1 {
  min-height: 200px;
}

.tight-2 {
  min-height: 250px;
}

.tight-3 {
  min-height: 300px;
}

.tight-4 {
  min-height: 350px;
}

.new-secondary-button:hover {
  border: 2px solid #242424;
  background-color: #242424;
}

.another-secondary-button:hover {
  border: 1px solid #242424;
  background-color: #242424;
  color: white;
}

.collection-link-text {
  color: white;
}

/* ---------------------------------------------feedback comments ---------------------------------------- */

.flex {
  display: flex;
}

.slider-container {
  max-width: 600px;
  min-height: 300px;
}

.comment-container {
  height: fit-content;
  max-width: 100%;
  display: none;
  animation-name: fade;
  animation-duration: 1.5s;
}

.comment {
  font-size: 24px;
  color: #242424;
}

.align-bottom {
  position: relative;
  top: 80%;
}

.flex {
  gap: 5px;
}

.dots-container {
  text-align: center;
}

.dot {
  cursor: pointer;
  height: 10px;
  width: 10px;
  margin: 0 2px;
  border-radius: 50%;
  background-color: lightgray;
  display: inline-block;
  transition: 0.6s ease;
}

.active, .dot:hover {
  background-color: black;
}

@keyframes fade {
  from {opacity: .4}
  to {opacity: 1}
}

