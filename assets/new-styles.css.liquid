/* ---------------------------------------- first text with image background ------------------------------- */

.section-container {
  margin: 0 0 60px;
  width: 100%;
}

.img-bg-container {
  width: 100%;
  min-height: 600px;
  display: flex;
  position: relative;
}
.align-1 {
  justify-content: start;
}
.align-2 {
  justify-content: center;
}
.align-3 {
  justify-content: end;
}

.v-align-1 {
  top: 0;
}
.v-align-2 {
  top: 5vh;
}
.v-align-3 {
  top: 10vh;
}
.v-align-4 {
  top: 15vh;
}
.v-align-5 {
  top: 20vh;
}

.text-container {
  width: 33%;
  min-width: 430px;
  height: fit-content;
  max-height: 170px;
  padding: 15px;
  z-index: 9;
  margin: 100px;
  position: relative;
}

.text-header {
  color: white;
  font-size: 40px;
  margin: 0 0 0.5em;
}

.main-text {
  color: white;
  font-size: 18px;
  margin: 0 0 1.5em;
}

.link-button {
  width: 196px;
  min-height: 45px;
  padding: 10px;
  background-color: transparent;
  border: 2px solid white;
  display: flex;
  justify-content: center
}

.img {
  position: absolute;
  width: 100%;
  height: 600px;
  object-fit: cover;
}

.the-link {
  color: white;
  font-weight: 500;
  font-size: 16px;
}

/* ---------------------------------------- featured collection ------------------------------------------ */

.flex-header-section {
  display: flex;
}

.flex-sb {
  justify-content: space-between;
}

.flex-start {
  justify-content: start;
}

.flex-end {
  justify-content: end;
}

.link-products {
  background-color: transparent;
  color: black;
  border: none;
  text-decoration: revert;
  font-size: 12px
}

.link-products:hover {
  font-weight: 400;
}

.sale-tag {
  font-size: 0.6875em;
  font-weight: 500;
  letter-spacing: 0.1em;
  line-height: 1.4;
  position: absolute;
  text-transform: uppercase;
}

.sale-tag.tl {
  top: 10px;
}

.sale-tag.sale {
  background: white;
  color: gray;
}

