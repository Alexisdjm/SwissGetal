<div class="new-header">
    <div class="menu-container menu-links-1">
        <nav class="navbar-links">
            {% for link in linklists[section.settings.menu_linklist].links %}
                <div class="each-link">
                    <a href="{{ link.url }}">{{ link.title }}</a>
                </div>
            {% endfor %}
        </nav>
    </div>
    <div class="logo-header-container">
        <img width="{{ section.settings.logo_width }}" src="{{ section.settings.logo-img | img_url: 'master' }}" alt="logo">
    </div>
    <div class="items-container">
        <i class="fa-regular fa-heart"></i>
        {%- if settings.enable_search -%}
            <span class="header-items__item header-items__search-link">
                <a href="{{ routes.search_url }}" class="header-search-toggle" aria-label="{{ 'layout.header.search' | t | escape }}">
                {% render 'svg-search' %}
                </a>
            </span>
        {%- endif -%}
        <i class="fa-regular fa-user"></i>

        <span class="header-items__item header-items__cart-link">
            <a href="{{ routes.cart_url }}" aria-label="{{ 'layout.header.cart' | t | escape }}">
              <span class="cart-link-icon">{% render 'svg-cart' %}</span>
              {% if cart.item_count > 0 %}<span class="cart-count">({{ cart.item_count }})</span>{% endif %}
            </a>
        </span>
    </div>
</div>
{% schema %}
    {
        "name": "new-header",
        "class": "new-header-section",
        "settings": [
            {
                "type": "image_picker",
                "label": "logo",
                "id": "logo-img"
            },
            {
                "type": "image_picker",
                "id": "alt_logo",
                "label": "Contrast logo",
                "info": "Optional logo used when over the header slideshow and images."
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 250,
                "step": 5,
                "unit": "px",
                "label": "Maximum logo width",
                "info": "Logo height is restricted to 150px.",
                "default": 150
            },
            {
                "type": "header",
                "content": "Layout"
            },
            {
                "type": "checkbox",
                "id": "enable_sticky",
                "label": "Stick to top of screen on scroll",
                "default": true
            },
            {
                "type": "header",
                "content": "Navigation"
            },
            {
                "type": "link_list",
                "id": "menu_linklist",
                "label": "Menu",
                "default": "main-menu"
            }
        ]
    }
{% endschema %}